<!--Striped rows Light Starts-->
<section id="striped-light">
  <div class="row">
    <div class="col-sm-12">
      <div class="card">
        <div class="card-header">
          <div class="card-title-wrap bar-info">
            <h4 class="card-title d-inline">Categories</h4>
            <a href="/admin/categories/create" class="btn btn-info btn-sm shadow-z-2 pull-right">Add New Category</a>
          </div>
          <p>You can see all 'Categories', edit and delete on the table below.</p>
        </div>

        <div class="card-body">
          <div class="card-block">

            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Id</th>
                  <th>Category Name</th>
                  <th>Update</th>
                </tr>
              </thead>
              <tbody>
                {{#each categories}}
                <tr>
                  <td>{{id}}</td>
                  <td>{{name}}</td>
                  <td>
                    <a href="/admin/categories/edit/{{id}}" class="btn btn-primary btn-round btn-sm mr-1 shadow-z-2">
                      <i class="icon-note"></i> Edit
                    </a>
                    <form class="d-inline" action="/admin/categories/delete/{{id}}?_method=DELETE" method="post">
                      <button type="submit" class="btn btn-danger btn-round btn-sm shadow-z-2">
                        <i class="icon-trash"></i> Delete
                      </button>
                    </form>

                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!--Striped rows Light Ends-->
